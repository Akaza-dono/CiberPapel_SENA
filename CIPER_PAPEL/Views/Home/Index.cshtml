@model CIPER_PAPEL.Class.UserListViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="login">
        <form action="/Home/login" method="post">
            <h3>Ciber Papel</h3>

            <label for="usuario"><strong>Nombre de usuario</strong></label>
            <input type="text" placeholder="Usuario o contraseña" name="usuario" id="usuario" />

            @if (Model != null &&  Model.Response == "Error")
            {
                <p style="color: red;">El usuario o contraseña son incorrectos, por favor verifica</p>
            }

            <label for="password"><strong>Contraseña</strong></label>
            <input type="password" placeholder="Contraseña" name="contrasena" id="password" />

            <button class="buttonIn" id="loginButton" type="submit">Log In</button>
        </form>
    </div>
    <div class="circle first"></div>
    <div class="circle second"></div>
</body>
</html>
<script src="~/js/login.js" type="text/javascript"></script>
